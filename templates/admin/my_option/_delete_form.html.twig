<form method="post" action="{{ path('my_option_delete', {'id': my_option.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ my_option.id) }}">
    <button class="btn btn-secondary">Delete</button>
</form>
