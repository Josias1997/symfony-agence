{% extends 'base.html.twig' %}

{% block title %}Option index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Option index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for my_option in my_options %}
                <tr>
                    <td>{{ my_option.id }}</td>
                    <td>{{ my_option.name }}</td>
                    <td>
                        <a href="{{ path('my_option_show', {'id': my_option.id}) }}">show</a>
                        <a href="{{ path('my_option_edit', {'id': my_option.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('my_option_new') }}" class = "btn btn-secondary">Create new</a>
    </div>
{% endblock %}
