{% extends 'base.html.twig' %}

{% block title 'Editer les biens'%}

{% block body %}
    <div class="container mt-4">
    {% block form_title '<h1>Editer les biens</h1>' %}
        {{ form_start(form) }}
        <div class="row">
            <div class = "col-md-4">{{ form_row(form.title )}}</div>
            <div class = "col-md-4">{{ form_row(form.area )}}</div>
            <div class = "col-md-4">{{ form_row(form.price )}}</div>
        </div>
        <div class = "row">
            <div class="col-md-3">{{ form_row(form.rooms) }}</div>
            <div class="col-md-3">{{ form_row(form.bedrooms) }}</div>
            <div class="col-md-3">{{ form_row(form.heat) }}</div>
            <div class="col-md-3">{{ form_row(form.floor) }}</div>
        </div>
        <div class = "row">
            <div class="col-md-3">{{ form_row(form.imageFile) }}</div>
            <div class="col-md-3">{{ form_row(form.address) }}</div>
            <div class="col-md-3">{{ form_row(form.city) }}</div>
            <div class="col-md-3">{{ form_row(form.postal_code) }}</div>
        </div>
        <div class="row">
            <div class="col-md-2">{{ form_row(form.sold) }}</div>
        </div>
        {{ form_rest(form) }}
        {% block button '<button class="btn btn-primary">Editer</button>'%}
        {{ form_end(form) }}
    </div>
{% endblock %}
