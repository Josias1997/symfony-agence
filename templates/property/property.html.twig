<div class="card mb-4">
  {% if property.fileName %}
      <img src = "{{ vich_uploader_asset(property, 'imageFile') | imagine_filter('thumb') }}" alt = "card-img-top"/>
    {% else %}
    <img src = "{{ '/images/properties/empty.jpg' | imagine_filter('thumb') }}" alt = "card-img-top"/> 
  {% endif %}
  <div class="card-body">
    <h5 class="card-title">Title
        <a href = "{{ path('property.show', {slug: property.slug, id: property.id}) }}">
            {{ property.title}}
        </a>
    </h5>
    <p class="card-text">
        {{ property.area }}mÂ² - {{ property.city }} | {{ property.postalcode }}
    </p>
    <div class = "text-primary">
        {{ property.formattedPrice }}
    </div>
  </div>
</div>